<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ShoppingList_4J.Views.Components.CategoryView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:ShoppingList_4J.Views.Components">
    <Frame Padding="5" Margin="5" HasShadow="True">
        <VerticalStackLayout>
            <Grid ColumnDefinitions="60,*">
                <Button Grid.Column="0"
                        Text="ZwiÅ„"
                        Clicked="OnToggleClicked"
                        BackgroundColor="DimGray" />
                
                <Label Grid.Column="1"
                       Text="{Binding Name}"
                       FontSize="20"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       Margin="10,0,0,0" />
            </Grid>

            <VerticalStackLayout IsVisible="{Binding IsExpanded}"
                                 Margin="0,5,0,0"
                                 BindableLayout.ItemsSource="{Binding Products}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <components:ProductView />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Frame>
</ContentView>