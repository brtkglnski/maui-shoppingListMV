<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ShoppingList_4J.Views.Components.ProductView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Frame Padding="5" Margin="5" HasShadow="True">
        <Grid ColumnDefinitions="30,*,80,40,40" RowDefinitions="Auto,Auto">

            <CheckBox Grid.Column="0"
                      IsChecked="{Binding Purchased}"
                      CheckedChanged="OnPurchasedChanged"/>

            <Label Grid.Column="1"
                   Text="{Binding Name}"
                   VerticalOptions="Center">
                <Label.Triggers>
                    <DataTrigger TargetType="Label"
                                 Binding="{Binding Purchased}"
                                 Value="True">
                        <Setter Property="TextDecorations" Value="Strikethrough" />
                        <Setter Property="Opacity" Value="0.5" />
                    </DataTrigger>
                </Label.Triggers>
            </Label>


            <HorizontalStackLayout Grid.Column="2" Spacing="2">
                <Entry Text="{Binding Quantity}"
                       Keyboard="Numeric"
                       WidthRequest="40"
                       TextChanged="OnQuantityChanged"
                       HorizontalTextAlignment="Center" />
                <Label Text="{Binding Unit}" />
            </HorizontalStackLayout>

            <Button Grid.Column="3"
                    Text="-"
                    Clicked="OnDecreaseClicked" />

            <Button Grid.Column="4"
                    Text="+"
                    Clicked="OnIncreaseClicked" />

            <Button Grid.Column="1"
                    Grid.ColumnSpan="4"
                    Grid.Row="1"
                    Text="UsuÅ„"
                    Clicked="OnDeleteClicked"
                    HorizontalOptions="End" />
        </Grid>
    </Frame>
</ContentView>
